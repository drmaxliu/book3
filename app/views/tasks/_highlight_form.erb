<% if Mark.count == 0 %>
  <% @mark = Mark.create %>
<% else %>
  <% @mark = Mark.first %>
<% end %>


<%= form_for @mark, remote: true do |f| %>
  <% if @mark.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@mark.errors.count, "error") %> prohibited this mark from being saved:</h2>

      <ul>
      <% @mark.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :highlight %><br />
    <%= f.text_field :highlight %>
  </div>

  <div class="actions">
    <%= f.submit "Save Highlight" %>
  </div>

<% end %>